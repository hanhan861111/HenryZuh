<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_line_hotweek_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/share_square"
    android:orientation="vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_line_hot_week_img"
        android:layout_width="240px"
        android:layout_height="240px"
        />
    <View
        android:background="@color/Gray"
        android:layout_width="match_parent"
        android:layout_height="2px"></View>
    <TextView
        android:id="@+id/home_line_hot_week_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="4px"
        android:textColor="@color/black"
        android:textSize="24px" />

    <TextView
        android:id="@+id/home_line_hot_week_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="4px"
        android:lines="2"
        android:textColor="@color/black"
        android:textSize="24px" />

    <com.zhy.autolayout.AutoLinearLayout
       android:layout_margin="4px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_line_hot_week_tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/translate"
            android:gravity="center"
            android:textSize="24px" />

        <TextView
            android:id="@+id/home_line_hot_week_tv_oldPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/translate"
            android:gravity="left|center_vertical"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>

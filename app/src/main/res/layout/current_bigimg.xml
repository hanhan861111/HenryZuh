<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_marigin"
            android:layout_marginTop="@dimen/list_marigin"
            android:singleLine="true"
            android:text="haha"
            android:textSize="@dimen/news_title" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_news_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_loadpic_height"
            android:layout_below="@id/tv_news_title"
            android:src="@drawable/big_loadpic_empty_listpage" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/type_item_common" />

</LinearLayout>
